@{
}

@model List<Movie>

<table class="table table-bordered">
	<thead class="fw-bold">
		<tr>
			<td>Title</td>
			<td>Year</td>
			<td>Director</td>
			<td>Rating</td>
			<td>Edited</td>
			<td>LentTo</td>
			<td>Copied To Plex</td>
			<td>Notes</td>
			<td>Actions</td>
		</tr>

	</thead>

	@* Fill in the table with data from the database *@
	@foreach (var x in Model)
	{
		<tbody>
			<tr>
				<td>@x.Title</td>
				<td>@x.Year</td>
				<td>@x.Director</td>
				<td>@x.Rating</td>
				<td>@x.Edited</td>
				<td>@x.LentTo</td>
				<td>@x.CopiedToPlex</td>
				<td>@x.Notes</td>
			
				<td width="145">
					@* Edit and delete buttons *@
					<a class="btn btn-info" asp-action="Edit" asp-controller="Home" asp-route-id="@x.MovieId">Edit</a>
					<a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.MovieId">Delete</a>
				</td>
			</tr>
		</tbody>
	}
</table>