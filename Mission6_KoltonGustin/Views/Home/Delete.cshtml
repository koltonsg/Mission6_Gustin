@* Page asking the user if they want to delete the movie for sure and then either cancelling or doing it *@

@model Movie

<h2>Are you sure you want to delete this Movie?</h2>
<h3>@Model.Title</h3>

<form method="post" style="display: flex; flex-direction: column; gap: 15px; max-width: 400px; margin: auto;">
    <input type="hidden" asp-for="MovieId" />

    <button type="submit" class="btn btn-danger" style="padding: 10px 15px; font-size: 16px; border-radius: 5px; background-color: #dc3545; color: white; transition: background-color 0.3s ease;">
        Delete
    </button>

    <a class="btn btn-info" asp-controller="Home" asp-action="Movielist" style="text-decoration: none; padding: 10px 15px; background-color: #17a2b8; color: white; border-radius: 5px; font-weight: bold; transition: background-color 0.3s ease;">
        Cancel
    </a>
</form>
